<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit_xendit" model="ir.ui.view">
      <field name="name">pos.payment.method.form.inherit.xendit</field>
      <field name="model">pos.payment.method</field>
      <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="xendit_secret_key"
                        attrs="{'invisible': [('use_payment_terminal', '!=', 'xendit')], 'required': [('use_payment_terminal', '=', 'xendit')]}"/>
                <field name="xendit_terminal_identifier" attrs="{'invisible': 1}"/>
                <field name="xendit_test_mode" attrs="{'invisible': 1}"/>
          </xpath>
      </field>
    </record>
</odoo>
