<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="xendit_action" model="ir.actions.act_window">
        <field name="name">Xendit POS</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">xendit.xendit</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Go to settings to set your credentials
            </p>
        </field>
    </record>
    <menuitem id="xendit_root"
        name="Xendit POS"
        sequence="10"
        />
    
    <menuitem id="xendit_sub_root"
        name="Home"
        parent="xendit_root"
        action="xendit_action"
        sequence="10"
        />
    
    <menuitem id="xendit_sub_configuration_root"
        name="Configuration"
        parent="xendit_root"
        action="xendit_action"
        sequence="11"
        />
</odoo>