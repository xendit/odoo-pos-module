<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
   <t t-name="XenditQRCodePopup" owl="1">
       <div role="dialog" class="modal-dialog">
           <div class="popup popup-xendit-qrcode" >
               <p class="title">
                   <t t-esc="props.title" />
               </p>
               <div class="body">
                    <t t-esc="props.body" />
                    <div><h4 id="xendit-payment-status"><t t-raw="props.xenditPaymentStatus" /></h4></div>
                    <div id="qrcode-img">
                        <canvas id="canvas-qrcode"></canvas>
                    </div>
                    <div id="invoice-link">
                        <a 
                            t-attf-class="button next highlight"
                            t-attf-target="_blank"
                            t-attf-style="float:none;"
                            t-attf-href="#{props.invoiceLink}">
                            Pay at Xendit
                        </a>
                    </div>
               </div>
               <div class="footer">
                   <div class="button cancel" t-on-click="confirm">
                       <t t-esc="props.confirmText" />
                   </div>
               </div>
           </div>
       </div>
   </t>
</templates>